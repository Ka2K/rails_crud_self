<div class="container">
  <div class="row justify-content-center text-center">
   <div class="col-2 mt-5">
     <h1 style="color: #0080FF">AskeD</h1>
     <i class="far fa-question-circle fa-7x" style="color: skyblue"></i>
     <hr style="border: double skyblue" />
     <p>무엇이든 물어보세요</p><hr style="border: solid 0.5px skyblue"/>
   </div>
  </div>

  <div class="row justify-content-center">
    <div class="offset-11 col-1">
      <a class="btn btn-primary" href="/posts/new">질문하기</a>
    </div>
  </div>

  <table class="table table-striped table-white mt-5 mx-5">
    <thead>
      <tr>
        <th scope="col" style="width: 5%">#</th>
        <th scope="col" style="width: 10%">질문자</th>
        <th scope="col" style="width: 10%">질문</th>
        <th scope="col" style="width: 60%">내용</th>
        <th scope="col" style="width: 5%"></th>
      </tr>
    </thead>
    <tbody>
     <% @posts.each do |post| %>
      <tr>
        <th scope="row"><%= post.id %></th>
        <td><%= post.user.username  %></td>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><a class="btn btn-info" href="/posts/<%= post.id %>">자세히보기</a>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  </div>
